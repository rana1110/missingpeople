<resources>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="buttonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/brandColorCode5</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_size_20</item>
    </style>

    <style name="textViewStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/brandColorCode3</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_size_14</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NavDrawerTextStyle" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/brandColorCode3</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="myAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/white_color_code_1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:textColor">@color/white_color_code_1</item>
        <item name="android:background">@color/blue_color_code_1</item>
    </style>

    <style name="headingTextView" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:textColor">@color/white_color_code_1</item>
    </style>

    <style name="customSpinnerSmall" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textSize">@dimen/font_size_16</item>
    </style>

    <style name="customSpinnerMedium" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textSize">@dimen/font_size_32</item>
    </style>

    <style name="customSpinnerLarge" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textSize">@dimen/font_size_48</item>
    </style>


    <style name="smallToolbarText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/font_size_16</item>
    </style>

    <style name="mediumToolbarText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/font_size_24</item>
    </style>

    <style name="largeToolbarText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/font_size_24</item>
    </style>


    <style name="feedbackInputText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:layout_margin">@dimen/dimen_16dp</item>
        <item name="android:paddingLeft">@dimen/dimen_4dp</item>
        <item name="android:textColorHint">@color/Black</item>
        <item name="android:padding">@dimen/dimen_16dp</item>
    </style>

    <style name="recyclerTextViewStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/brandColorCode3</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/brandColorCode3</item>
        <item name="boxBackgroundColor">@color/brandColorCode1</item>
        <item name="android:textColorHint">@color/brandColorCode3</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="errorEnabled">true</item>
        <item name="hintTextAppearance">@style/AppTheme.TextFloatLabelAppearance</item>
        <item name="errorTextAppearance">@style/AppTheme.TextErrorAppearance</item>
        <item name="android:layout_marginLeft">@dimen/dimen_16dp</item>
        <item name="android:layout_marginRight">@dimen/dimen_16dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_16dp</item>
    </style>

    <style name="AppTheme.TextFloatLabelAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/brandColorCode3</item>
        <item name="android:background">@color/brandColorCode3</item>
        <item name="android:textSize">@dimen/font_size_12</item>
    </style>

    <style name="textInputLayoutEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/brandColorCode3</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:textStyle">bold</item>
        <item name="singleLine">true</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="colorControlNormal">@color/brandColorCode3</item>
        <item name="colorControlActivated">@color/brandColorCode3</item>
        <item name="colorControlHighlight">@color/brandColorCode3</item>
    </style>

    <style name="AppTheme.TextErrorAppearance" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/color_code_2</item>
        <item name="android:textSize">@dimen/font_size_12</item>
    </style>

    <style name="otpValidationEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">@dimen/dimen_56dp</item>
        <item name="android:layout_width">@dimen/dimen_56dp</item>
        <item name="android:textColor">@color/brandColorCode3</item>
        <item name="android:maxLength">1</item>
        <item name="android:layout_marginEnd">@dimen/dimen_16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_size_24</item>
        <item name="android:textStyle">bold</item>
        <item name="android:inputType">numberSigned</item>
    </style>

</resources>