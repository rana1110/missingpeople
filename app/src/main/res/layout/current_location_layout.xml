<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/brandColorCode21"
    android:backgroundTint="@color/brandColorCode21"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dimen_8dp">

    <ImageView
        android:id="@+id/cancel_btn"
        android:layout_width="@dimen/dimen_32dp"
        android:layout_height="@dimen/dimen_32dp"
        android:layout_gravity="end"
        android:onClick="cancelButtonClick"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:layout_marginBottom="@dimen/dimen_16dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/cancel_icon" />

    <TextView
        android:id="@+id/tv1"
        style="@style/headingTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="start"
        android:text="Location"
        android:padding="@dimen/dimen_24dp"/>

    <Button
        android:id="@+id/add_comment_button"
        style="@style/buttonStyle"
        android:layout_marginStart="@dimen/dimen_48dp"
        android:layout_marginEnd="@dimen/dimen_48dp"
        android:layout_marginBottom="@dimen/dimen_16dp"
        android:background="@drawable/round_corner_button"
        android:gravity="center"
        android:visibility="gone"
        android:onClick="getLocationOnClick"
        android:text="@string/button_add_comment" />

</LinearLayout>