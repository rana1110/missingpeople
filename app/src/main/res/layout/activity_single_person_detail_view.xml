<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brandColorCode2"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_marginBottom="@dimen/dimen_24dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:isScrollContainer="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/newsImageView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_320dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_24dp"
                android:layout_marginRight="@dimen/dimen_24dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/india" />

            <LinearLayout style="@style/linearLayoutStyle">

                <TextView
                    style="@style/singlePersonTextViewStyle"
                    android:text="Name" />

                <ImageView style="@style/imageStyle" />

                <TextView
                    android:id="@+id/single_person_name"
                    style="@style/singlePersonTextViewBoldStyle"
                    android:text="Ankitkumar Rana" />
            </LinearLayout>

            <LinearLayout style="@style/linearLayoutStyle">

                <TextView
                    style="@style/singlePersonTextViewStyle"
                    android:text="Father's Name" />

                <ImageView style="@style/imageStyle" />

                <TextView
                    android:id="@+id/single_person_father_name"
                    style="@style/singlePersonTextViewBoldStyle"
                    android:text="Maheshbhai Rana" />
            </LinearLayout>


            <LinearLayout style="@style/linearLayoutStyle">

                <TextView
                    style="@style/singlePersonTextViewStyle"
                    android:text="Mother's Name" />

                <ImageView style="@style/imageStyle" />

                <TextView
                    android:id="@+id/single_person_mother_name"
                    style="@style/singlePersonTextViewBoldStyle"
                    android:text="Bhavnaben Rana" />
            </LinearLayout>


            <LinearLayout style="@style/linearLayoutStyle">

                <TextView
                    style="@style/singlePersonTextViewStyle"
                    android:text="Gender" />

                <ImageView style="@style/imageStyle" />

                <TextView
                    android:id="@+id/single_person_gender"
                    style="@style/singlePersonTextViewBoldStyle"
                    android:text="Male" />
            </LinearLayout>

            <LinearLayout style="@style/linearLayoutStyle">

                <TextView
                    style="@style/singlePersonTextViewStyle"
                    android:text="Age" />

                <ImageView style="@style/imageStyle" />

                <TextView
                    android:id="@+id/single_person_age"
                    style="@style/singlePersonTextViewBoldStyle"
                    android:text="24 Years" />
            </LinearLayout>


            <LinearLayout style="@style/linearLayoutStyle">

                <TextView
                    style="@style/singlePersonTextViewStyle"
                    android:text="Height" />

                <ImageView style="@style/imageStyle" />

                <TextView
                    android:id="@+id/single_person_height"
                    style="@style/singlePersonTextViewBoldStyle"
                    android:text="5 Feet 9 Inches" />
            </LinearLayout>

            <LinearLayout style="@style/linearLayoutStyle">

                <TextView
                    style="@style/singlePersonTextViewStyle"
                    android:text="Weight" />

                <ImageView style="@style/imageStyle" />

                <TextView
                    android:id="@+id/single_person_weight"
                    style="@style/singlePersonTextViewBoldStyle"
                    android:text="80 Kgs" />
            </LinearLayout>

            <LinearLayout style="@style/linearLayoutStyle">

                <TextView
                    style="@style/singlePersonTextViewStyle"
                    android:text="Eye Color" />

                <ImageView style="@style/imageStyle" />

                <TextView
                    android:id="@+id/single_person_eye_color"
                    style="@style/singlePersonTextViewBoldStyle"
                    android:text="Brown" />
            </LinearLayout>


            <LinearLayout style="@style/linearLayoutStyle">

                <TextView
                    style="@style/singlePersonTextViewStyle"
                    android:text="Hair Color" />

                <ImageView style="@style/imageStyle" />

                <TextView
                    android:id="@+id/single_person_hair_color"
                    style="@style/singlePersonTextViewBoldStyle"
                    android:text="Black" />
            </LinearLayout>


            <LinearLayout style="@style/linearLayoutStyle">

                <TextView
                    style="@style/singlePersonTextViewStyle"
                    android:text="Identity Mark" />

                <ImageView style="@style/imageStyle" />

                <TextView
                    android:id="@+id/single_person_identity_mark"
                    style="@style/singlePersonTextViewBoldStyle"
                    android:text="teeth Braces,Medium Height" />
            </LinearLayout>

            <LinearLayout style="@style/linearLayoutStyle">

                <TextView
                    style="@style/singlePersonTextViewStyle"
                    android:text="Posted By" />

                <ImageView style="@style/imageStyle" />

                <TextView
                    android:id="@+id/single_person_posted_by"
                    style="@style/singlePersonTextViewBoldStyle"
                    android:text="Ankikumar Rana" />
            </LinearLayout>


            <LinearLayout style="@style/linearLayoutStyle">

                <TextView
                    style="@style/singlePersonTextViewStyle"
                    android:text="Contact Detail" />

                <ImageView style="@style/imageStyle" />

                <TextView
                    android:id="@+id/single_person_contact_detail"
                    style="@style/singlePersonTextViewBoldStyle"
                    android:linksClickable="true"
                    android:text="787872130" />
            </LinearLayout>

            <LinearLayout style="@style/linearLayoutStyle">

                <TextView
                    style="@style/singlePersonTextViewStyle"
                    android:text="City,State" />

                <ImageView style="@style/imageStyle" />

                <TextView
                    android:id="@+id/single_person_city_state"
                    style="@style/singlePersonTextViewBoldStyle"
                    android:text="Valsad , Gujarat" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>