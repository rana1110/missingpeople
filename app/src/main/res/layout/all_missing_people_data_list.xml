<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_8dp"
    android:layout_marginRight="@dimen/dimen_8dp"
    android:layout_marginBottom="@dimen/dimen_8dp"
    android:background="@drawable/round_corner_button"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/newsImageView"
            android:layout_width="@dimen/dimen_104dp"
            android:layout_height="@dimen/dimen_104dp"
            android:layout_gravity="center"
            android:background="@drawable/round_corner_button"
            android:padding="@dimen/dimen_16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginBottom="@dimen/dimen_8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/personName"
            style="@style/recyclerTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/personMissingFrom"
            style="@style/recyclerTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/personMissingDate"
            style="@style/recyclerTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/personContactDetails"
            style="@style/recyclerTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:layout_weight="2.5"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_24dp"
            android:gravity="center"
            android:src="@drawable/call_icon" />

        <ImageView
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_24dp"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:gravity="center"
            android:src="@drawable/share_icon" />
    </LinearLayout>

</LinearLayout>